import java.util.Scanner;

public class MensagemPersonalizada {
    public static void main(String[] args) {
        // Criando um objeto Scanner para entrada de dados
        Scanner scanner = new Scanner(System.in);

        // Solicitar e obter o nome da pessoa
        System.out.print("Digite o seu nome: ");
        String nome = scanner.nextLine();

        // Solicitar e obter a idade da pessoa
        System.out.print("Digite a sua idade: ");
        int idade = scanner.nextInt();

        // Fechar o scanner após a entrada de dados
        scanner.close();

        // Emitir mensagem personalizada com o nome e a idade da pessoa
        System.out.println("Olá, " + nome + "! Você tem " + idade + " anos.");
    }
}